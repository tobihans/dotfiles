#!/usr/bin/env bash
# https://www.grahamwatts.co.uk/gnome-secrets/#how-not-to-do-it

LABEL="KDevelop"

entry=$1
store_password=$(secret-tool lookup $LABEL passwd)

if [[ -z $entry ]]; then
    exit 1
fi

if [[ -z $store_password ]]; then
    store_password=$(zenity --password --title='Unlock KDevelop')
    echo "$store_password" | secret-tool store --label=$LABEL $LABEL passwd
fi

echo "$store_password" | keepassxc-cli show -a password -s ~/.pwsafe/KDevelop.kdbx "$entry"

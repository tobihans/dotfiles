# vim: ft=gitconfig
[user]
	email = git@tobihans.space
	name = Hans B. K. Tognon
	useConfigOnly = true
	signingKey = ~/.ssh/git.pub

[includeIf "gitdir:~/github/piccl/"]
  path = piccl
[includeIf "gitdir:~/gitlab/piccl/"]
  path = piccl2

; NOTE: https://calebhearth.com/sign-git-with-ssh
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = /home/tobi/.ssh/allowed_signers
[commit]
	gpgsign = true
[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = !/usr/bin/gh auth git-credential
[init]
	defaultBranch = main
[color]
	ui = true
[core]
	pager = less -r
	editor = vim

[status]
	submodulesummary = 1
	showStash = true
[pull]
	rebase = true
[diff]
	colorMoved = zebra
	wsErrorHighlight = all
	tool = nvimdiff
[alias]
	lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	clown = clone --filter=blob:none --
[log]
	showSignature = true
